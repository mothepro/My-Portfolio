##########################
# Compiler Configuration #
##########################

# hostname
host:	local-mo.com

# PPK to use
ppk:	C:\Users\Mo\.ssh\tower.ppk

compress: no
verbose: 3

# Remote Project Dir
project:
	remote:	/web/mo

	# Local folder's or files to copy
	files:
		- www


# Local static content locations
upload:
	sass:
		- assets/css
	js:
		- assets/js
	img:
		- assets/img

	font: assets/font

# Where to save new static content
download:
	sass:	/web/mo/data/css
	js:		/web/mo/data/js
	font:	/web/mo/data/font
	img:	/web/mo/data/img

# Hooks for more binaries!
hooks:
	Uploading Project:
		pre:
			local:
				- php bin\make_index.php -i index.php -o www\index.html
		post:
			# Remove auto generated files
			local:
				- del tmp.php
				- del www\index.html
				- rmdir www\

constantOutput: tmp.php
constants:
	analytics: no
	+url:
		css:	/data/css/
		js:		/data/js/
		img:	/data/img/
		font:	/data/font/